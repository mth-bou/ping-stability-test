// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model User {
  id           String   @id @default(cuid())
  name         String?
  email        String   @unique
  profileViews Int      @default(0)
  role         String   @default("USER")
  city         String?
  country      String?
  createdAt    DateTime @default(now())

  sessions Session[]
  accounts Account[]
  tests    Test[]
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Test {
  id             Int      @id @default(autoincrement())
  serverId       Int
  startTime      DateTime
  endTime        DateTime
  pingMin        Int
  pingMax        Int
  pingAvg        Float
  downloadSpeed  Float?
  uploadSpeed    Float?
  jitter         Float?
  packetLoss     Decimal?
  serverLocation String?
  testStatus     String
  createdAt      DateTime

  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}
